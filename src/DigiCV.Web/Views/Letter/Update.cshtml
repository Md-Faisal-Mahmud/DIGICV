@model DigiCV.Web.Models.Letter.LetterUpdateModel;
@{
    ViewData["Title"] = "Update";
}

@section Styles{
    <link href='https://fonts.googleapis.com/css?family=Young Serif' rel='stylesheet'>
}
<section style="font-family: Young Serif, sans-serif;">
    <div class="container">
        <form role="form" asp-antiforgery="true" asp-action="Update"
              asp-controller="Letter" method="post" class="my-5 py-5">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            <h2 class="text-secondary text-center mb-4 bg-white p-4">Update Your Cover Letter Here</h2>
            <partial name="_ResponsePartial" />
            <div class="card">
                <div class="card-body p-5">
                    <h3 class="font-weight-bold mb-3 text-info">Your Details</h3>
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="SenderName">Full Name</label>
                            <input type="text" class="form-control mb-2" asp-for="SenderName" placeholder="Example Name" required>
                            <span asp-validation-for="SenderName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="SenderAddress">Address</label>
                            <input type="text" class="form-control mb-2" asp-for="SenderAddress" placeholder="House/ Road/ Village" required>
                            <span asp-validation-for="SenderAddress" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="SenderAddressEx">Extension</label>
                            <input type="text" class="form-control mb-2" asp-for="SenderAddressEx" placeholder="Area/ City/ District/ Postal Code" required>
                            <span asp-validation-for="SenderAddressEx" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="SenderPhone">Contact</label>
                            <input type="number" class="form-control mb-2" asp-for="SenderPhone" placeholder="017...." required>
                            <span asp-validation-for="SenderPhone" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="SenderEmail">Email</label>
                            <input type="email" class="form-control mb-2" asp-for="SenderEmail" placeholder="example@yahoo.com" required>
                            <span asp-validation-for="SenderEmail" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>

            <div class="card mt-5">
                <div class="card-body p-5">
                    <h3 class="font-weight-bold mb-3 text-info">Recipient Details</h3>
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Recipient">Name of recipient/ department</label>
                            <input type="text" class="form-control mb-2" asp-for="Recipient" placeholder="The Head of Human Resource" required>
                            <span asp-validation-for="Recipient" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="CompanyName">Company Name</label>
                            <input type="text" class="form-control mb-2" asp-for="CompanyName" placeholder="Example Ltd." required>
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="CompanyAddress">Company Address</label>
                            <input type="text" class="form-control mb-2" asp-for="CompanyAddress" placeholder="House/ Area/ City/ Postal Code" required>
                            <span asp-validation-for="CompanyAddress" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>

            <div class="card mt-5">
                <div class="card-body p-5">
                    <h3 class="font-weight-bold mb-3 text-info">Letter Body</h3>
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Subject">Subject</label>
                            <input type="text" class="form-control mb-2" asp-for="Subject" placeholder="Application for Junior Programmar Post." required>
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label asp-for="RecipientAddressing">Recipient addressing</label>
                            <input type="text" class="form-control mb-2" asp-for="RecipientAddressing" placeholder="Dear Sir," required>
                            <span asp-validation-for="RecipientAddressing" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="Body">Body</label> <br>
                            <textarea asp-for="Body" class="col-md-12" name="Body" rows="6" placeholder="I am writing to express..." required></textarea>
                            <span asp-validation-for="Body" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>
            <div class="card mt-5">
                <div class="card-body p-5">
                    <div class="row mb-3">
                        <div class="col-6">
                            <h3 class="font-weight-bold mb-3 text-info">Letter Details</h3>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Letter" asp-action="Example" class="btn btn-outline-success float-right">See Examples</a>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="SendingDate">Letter Date</label>
                            <input type="date" class="form-control mb-2" asp-for="SendingDate" placeholder="" required>
                            <span asp-validation-for="SendingDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Title">Letter Name</label>
                            <input type="text" class="form-control mb-2" asp-for="Title" placeholder="Cover Letter 1" required>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-info">Update Letter</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}

